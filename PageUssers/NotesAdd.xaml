<Page x:Class="УП.PageUssers.NotesAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:УП.PageUssers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotesAdd">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="451*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="158*"/>
            <RowDefinition Height="293*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding NoteText}" x:Name="NoteText" Margin="10,44,36.5,26" />
        <Button Content="Добавить заметку" Width="150" Height="30" Margin="24,10,176,252" Click="AddNoteButton_Click" Grid.Row="1"/>


    </Grid>
</Page>
